{{- $codespaces:= or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") -}}
{{- $debian:= false -}}
{{- $wsl:= false -}}

{{- if $codespaces -}}
    {{- writeToStdout "ðŸ‘€ Codespace detected\n" -}}
{{- end -}}

{{- if eq .chezmoi.os "linux" -}}
    {{- $debian:= eq .chezmoi.osRelease.id "debian" "ubuntu" -}}
    {{- if $debian -}}
        {{- writeToStdout "ðŸ’¡ Script launched in Debian\n" -}}
    {{- end -}}

    {{- if eq .chezmoi.osRelease.id "arch" -}}
        {{- writeToStdout "ðŸ’¡ Script launched in Archlinux\n" -}}
        {{- $wsl = contains "windows" .chezmoi.kernel.osrelease -}}
        {{- if $wsl -}}
            {{- writeToStdout "ðŸ‘€ WSL detected\n" -}}
        {{- end -}}
    {{- end -}}
{{- else if eq .chezmoi.os "windows" -}}
    {{- writeToStdout "ðŸ’¡ Script launched in Windows\n" -}}
    {{- $wsl = promptBool "Install Arch WSL? (y/n)" false -}}
{{- end -}}

[data]
    codespaces = {{ $codespaces }}
    debian = {{ $debian }}
    wsl = {{ $wsl }}
