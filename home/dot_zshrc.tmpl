# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
# Aditionnal completions
fpath=($ZSH/custom/plugins/zsh-completions/src $fpath)
# Set name of the theme to load --- if set to "random", it will
# load a random theme each time oh-my-zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="powerlevel10k/powerlevel10k"
# Disable oh-my-zsh auto updates
DISABLE_AUTO_UPDATE="true"
# oh-my-zsh plugins
plugins=(
{{- if lookPath "git" }}
  git-commit git-extras
{{- end }}
{{- if .debian }}
  debian
{{- end }}
{{- if eq .chezmoi.osRelease.id "arch" }}
  archlinux
{{- end }}
  sudo
)

# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
bindkey -v
# End of lines configured by zsh-newuser-install
# The following lines were added by compinstall
zstyle :compinstall filename ~/.zshrc

{{ if stat (joinPath (env "XDG_RUNTIME_DIR") "ssh-agent.socket") -}}
export SSH_AUTH_SOCK=$XDG_RUNTIME_DIR/ssh-agent.socket
{{- end }}

autoload -Uz compinit
compinit
# End of lines added by compinstall

{{ if lookPath "most" -}}
export PAGER=most
{{- end }}
{{- if lookPath "nvim" }}
export EDITOR=nvim
{{- else }}
export EDITOR=vim
{{- end }}

{{ if lookPath "ag" -}}
alias find=ag
{{- end }}
{{- if lookPath "rg" }}
alias grep=rg
{{- end }}
alias du="du -chd 1"
{{- if lookPath "bat" }}
alias cat="bat -pp"
{{- else if lookPath "batcat" }}
alias cat="batcat -pp"
{{- end }}
{{- if lookPath "lsd" }}
DISABLE_LS_COLORS=true
alias ls=lsd
alias l="lsd -lA"
alias ll="lsd -l"
alias tree="lsd --tree"
{{- end }}

{{ if lookPath "howdoi" -}}
# howdoi
export HOWDOI_COLORIZE=1
export HOWDOI_SEARCH_ENGINE=duckduckgo
{{ end -}}

eval "$(zoxide init zsh)"

{{ if eq .chezmoi.osRelease.id "arch" -}}
# pacman
alias premove="sudo pacman -Rucn"
alias premovedepth="pacman -Qtdq | sudo pacman -Rns -"

func pupdaterepos() {
  sudo curl "https://archlinux.org/mirrorlist/?country=FR&protocol=https&use_mirror_status=on" | sudo tee /etc/pacman.d/mirrorlist.backup
  sudo sed -i 's/^#Server/Server/' /etc/pacman.d/mirrorlist.backup
  rankmirrors -n 6 /etc/pacman.d/mirrorlist.backup | sudo tee /etc/pacman.d/mirrorlist
}
{{- end }}

source $ZSH/oh-my-zsh.sh

{{ if stat "/etc/profile.d/locale.sh" -}}
# Apply locale
unset LANG
source /etc/profile.d/locale.sh
{{- end }}

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
